{
  "compilerOptions": {
     "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types":["@playwright/test", "jest","@testing-library/jest-dom"], 
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, 
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }]
  },
"include": [
  "next-env.d.ts",
  ".next/types/**/*.ts",
  "src/**/*.ts",
  "src/**/*.tsx"
, "tests/e2e/create_module.spec.ts"],
  "exclude": ["node_modules"]
}